generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Port {
  id               Int    @id @default(autoincrement())
  name             String
  country          String
  lastVisitedShips Ship[]
}

model Ship {
  id        Int      @id @default(autoincrement())
  name      String
  imo       Int
  visitedAt DateTime
  teu       Int
  loa_m     Float
  draft_m   Float
  photo_url String
  geared    Boolean
  gear_info String?
  latitude  Float
  longitude Float

  portId Int
  port   Port @relation(fields: [portId], references: [id])
}
